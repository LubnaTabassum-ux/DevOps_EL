# deployment/deployment.yaml.j2
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ APP_NAME }}-deployment
  labels:
    app: {{ APP_NAME }}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: {{ APP_NAME }}
  template:
    metadata:
      labels:
        app: {{ APP_NAME }}
    spec:
      containers:
      - name: {{ APP_NAME }}
        image: {{ IMAGE_TAG }}
        ports:
        - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: {{ APP_NAME }}-service
spec:
  selector:
    app: {{ APP_NAME }}
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
  type: LoadBalancer
